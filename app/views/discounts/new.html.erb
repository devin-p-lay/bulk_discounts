<h1>New Discount</h1>

<%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :percentage_discount %>
  <%= f.text_field :percentage_discount %>

  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold %>

  <%= f.submit 'Submit' %>
<% end %>